<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_bus"
        android:layout_width="182dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:text="Busuhrzeiten"
        android:textColor="#000000"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mensa"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mytoolbar"
        android:layout_width="393dp"
        android:layout_height="68dp"
        android:background="?attr/colorSecondaryVariant"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="viewStart"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_navigation"
        android:layout_width="182dp"
        android:layout_height="65dp"
        android:layout_marginTop="412dp"
        android:drawableLeft="@drawable/ic_navigation"
        android:text="Navigation"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mytoolbar"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button_mensa"
        android:layout_width="182dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_mensa_menu"
        android:text="Mensalist"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_navigation"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="449dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tdu_nav12" />

    <Button
        android:id="@+id/calendar_btn"
        android:layout_width="182dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="Calendar"
        android:textColor="@color/black"
        app:icon="@drawable/ic_action_name_calendar"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bus" />

</androidx.constraintlayout.widget.ConstraintLayout>